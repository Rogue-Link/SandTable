<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{2} - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="in.xnnyygn.xraft.kvstore" level="debug"/>
        <Logger name="in.xnnyygn.xraft.core.node" level="debug"/>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
